<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="NewBinding1" closeTimeout="00:10:00" openTimeout="00:10:00"
          sendTimeout="00:10:00" transferMode="Buffered" maxBufferPoolSize="20000000"
          maxBufferSize="20000000" maxReceivedMessageSize="20000000">
          <readerQuotas maxDepth="20000000" maxStringContentLength="20000000"
            maxArrayLength="20000000" maxBytesPerRead="20000000" maxNameTableCharCount="20000000" />
        </binding>
      </netTcpBinding>
      <wsDualHttpBinding>
        <binding name="NewBinding0" closeTimeout="00:10:00" openTimeout="00:10:00"
          sendTimeout="00:10:00" transactionFlow="true" maxBufferPoolSize="20000000"
          maxReceivedMessageSize="20000000">
          <readerQuotas maxDepth="20000000" maxStringContentLength="20000000"
            maxArrayLength="20000000" maxBytesPerRead="20000000" maxNameTableCharCount="20000000" />
        </binding>
      </wsDualHttpBinding>
    </bindings>
    <services>
      <service name="Server.Service">
        <endpoint address="CallbackService" binding="netTcpBinding" bindingConfiguration="NewBinding1"
          contract="Server.IService" />
